# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/student_finance_db?schema=public"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for token blacklist and AI cache)
# Get free Redis from https://upstash.com or use local Redis
REDIS_URL=redis://localhost:6379

# Account Lockout Settings
LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION_MINUTES=15

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Student Finance" <noreply@studentfinance.com>

# Hugging Face API (for AI categorization - free)
# Get your key at https://huggingface.co/settings/tokens
# HUGGING_FACE_API_KEY=hf_your_token_here
